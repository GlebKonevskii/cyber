<script>
    function togglePassword() {
        const passwordInput = document.getElementById('password');
        const toggleIcon = document.getElementById('toggleIcon');
        
        if (passwordInput.type === 'password') {
            passwordInput.type = 'text';
            toggleIcon.textContent = '–°–∫—Ä—ã—Ç—å';
        } else {
            passwordInput.type = 'password';
            toggleIcon.textContent = '–ü–æ–∫–∞–∑–∞—Ç—å';
        }
    }
    
    // –ú–∞—Å–∫–∞ –¥–ª—è –≤–≤–æ–¥–∞ —Ç–µ–ª–µ—Ñ–æ–Ω–∞/–°–ù–ò–õ–°
    document.getElementById('username').addEventListener('input', function(e) {
        let value = e.target.value.replace(/\D/g, '');
        
        if (value.length === 11 && (value.startsWith('7') || value.startsWith('8'))) {
            // –§–æ—Ä–º–∞—Ç —Ç–µ–ª–µ—Ñ–æ–Ω–∞
            let formatted = '+7 (' + value.substring(1, 4) + ') ' + value.substring(4, 7) + '-' + value.substring(7, 9) + '-' + value.substring(9, 11);
            e.target.value = formatted;
        } else if (value.length === 11) {
            // –§–æ—Ä–º–∞—Ç –°–ù–ò–õ–°
            let formatted = value.substring(0, 3) + '-' + value.substring(3, 6) + '-' + value.substring(6, 9) + ' ' + value.substring(9, 11);
            e.target.value = formatted;
        }
    });
</script>
